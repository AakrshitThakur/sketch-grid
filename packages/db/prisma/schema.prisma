generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("LOCAL_DATABASE_URL")
}

model User {
  id         String   @id       @default(uuid())
  username   String   @unique
  email      String   @unique
  password   String
  rooms      Room[]
  geometries Geometry[]
}

model Room {
  id          Int        @id               @default(autoincrement())
  slug        String     @unique
  password    String
  createdAt   DateTime   @default(now())
  admin_id    String
  admin       User       @relation(fields: [admin_id], references: [id])
  geometries  Geometry[]
  }

 enum Type{
  BOX
  CIRCLE
 } 

 model Geometry{
  id          Int         @id               @default(autoincrement())
  type        Type                          @default(BOX)
  room_id     Int
  room        Room        @relation(fields: [room_id], references: [id])
  admin_id    String
  admin       User        @relation(fields: [admin_id], references: [id])
 } 